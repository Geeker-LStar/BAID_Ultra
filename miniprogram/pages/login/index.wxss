/* pages/login/index.wxss */

.container {
  padding: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.input-group text {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

.input-group input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.result {
  margin-top: 20px;
  font-size: 14px;
  color: #333;
}