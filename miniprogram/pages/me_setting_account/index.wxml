<!--pages/me_setting_account/index.wxml-->

<view class="fs">

  <!--顶栏-->
  <view class="top-view">
    <text class="top-text">账号管理与安全</text>
  </view>

  <!--空白-->
  <view style="height: 2vh;"></view>

  <!--单个设置-->
  <view class="option-view">
    <!--空白-->
    <view style="width: 5vw;"></view>
    <!--文字-->
    <view class="option-text-view" bind:tap="goToAccount">
      <text class="option-text">头像</text>
    </view>
    <!--图像-->
    <view class="option-image-view">
      <image src="/images/pages_me_images/profile-image-example.png" class="profile"></image>
    </view>
    <!--空白-->
    <view style="width: 1.5vw;"></view>
    <!--箭头-->
    <view class="option-arrow-view">
      <text class="option-text">>></text>
    </view>
  </view>

</view>