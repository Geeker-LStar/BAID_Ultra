/* pages/bug_report/index.wxss */

.full-screen {
  width: 100vw;
  min-height: 100vh;
  background-color: #262626;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top-view {
  width: 100%;
  height: 6.5vh;
  background-color: #595959;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.top-text {
  color: #FFFFFF;
  font-size: 3vh;
  font-weight: 900;
  font-style: normal;
  font-family: Microsoft YaHei;
}

.hint-view {
  width: 90%;
  height: 3vh;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hint-text {
  color: #BFBFBF;
  font-size: 2vh;
  font-weight: 300;
  font-style: normal;
  font-family: Microsoft YaHei;
}

.input-title {
  color: white;
  font-size: 2vh;
  padding: 2vw;
  width: 90%;
  max-height: 9vh;
  background-color: #3B3838;
  border-radius: 10px;
}

.input-content-view {
  width: 90%;
  background-color: #3B3838;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-radius: 10px;
  padding: 2vw;
}

.input-placeholder {
  color: #808080;
  font-size: 2vh;
  font-weight: 500;
  font-style: normal;
  font-family: Microsoft YaHei;
  position: absolute;
  top: 1vw
}

.input-fake-content {
  color: #ffffff;
  font-size: 2vh;
  font-weight: 500;
  font-style: normal;
  font-family: Microsoft YaHei;
  position: absolute;
  top: 1vw;
  line-height: 2.5vh;
}

.input-content {
  font-size: 2vh;
  color: #ffffff;
  width: 95%;
  position: absolute;
  top: 1vw;
  line-height: 2.5vh;
}

.upload-images-view {
  width: 23%;
  height: 90%;
  border-radius: 3vw;
  border: #635E5E;
  border-style: solid;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image-overall-view {
  width: 90%;
  height: 15vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 3vw;
  border: #3B3838;
  border-style: solid;
}

.image-display-view {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.image-with-delete-button {
  width: 95%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.delete-button {
  width: 100%;
  height: 20%;
  background-color: #635E5E;
  border-radius: 2vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.image-uploaded {
  width: 100%;
  height: 76%;
}

.plus-icon {
  width: 10vw;
  height: 10vw;
}

.submit-view {
  width: 40%;
  height: 8vh;
  background-color: #3B3838;
  border-radius: 4vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.submit-text {
  color: #ffffff;
  font-size: 3.5vh;
  font-weight: 900;
  font-style: normal;
  font-family: Microsoft YaHei;
}

