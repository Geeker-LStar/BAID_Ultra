/*wxss*/

.full-screen {
  width: 100vw;
  min-height: 100vh;
  background-color: #262626;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upper-image-view {
  width: 100%;
  height: 25vh;
}

.upper-image {
  width: 100%;
  height: 100%;
}

.profile-and-name-view {
  width: 100%;
  height: 14vh;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.profile-view {
  height: 9.6vh;
  width: 9.6vh;
  display: flex;
}

.profile {
  height: 100%;
  width: 100%;
}

.name-and-accounttype-view {
  height: 9.6vh;
  width: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  color: #ffffff;
  font-size: 3vh;
  font-weight: 500;
  font-style: normal;
  font-family: Microsoft YaHei;
  line-height: 0;
}

.account-type {
  color: #D0CECE;
  font-size: 2vh;
  font-weight: 100;
  font-style: normal;
  font-family: Microsoft YaHei;
  line-height: 0;
}

.event-decoration {
  background-color: #3B3838;
  width: 92%;
  height: 30vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
}

.event-view {
  width: 90%;
  height: 85%;
  display: flex;
  flex-direction: column;
}

.subevent-view {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.event-title {
  color: #ffffff;
  font-size: 3vh;
  font-weight: 900;
  font-style: normal;
  font-family: Microsoft YaHei;
}

.event-time {
  color: #FFFFFF;
  font-size: 2.5vh;
  font-weight: 500;
  font-style: normal;
  font-family: Microsoft YaHei;
  position: relative;
  left: 2vw; /*缩进*/
}

.current-activity-decoration {
  width: 95%;
  height: 10vh;
  background-color: #F5FF5D;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.current-activity-view{
  width: 95%;
  height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.current-activity {
  color: #000000;
  font-size: 2.5vh;
  font-weight: 400;
  font-style: normal;
  font-family: Microsoft YaHei;
}

.next-activity-decoration {
  width: 100%;
  height: 4vh;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.next-activity-view {
  width: 66.5%;
  height: 100%;
  background-color: #87FFD2;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.next-activity-without-underline {
  color: #000000;
  font-size: 2vh;
  font-weight: 400;
  font-style: normal;
  font-family: Microsoft YaHei;
}

.next-activity-underlined {
  color: #000000;
  font-size: 2vh;
  font-weight: 400;
  font-style: normal;
  text-decoration: underline;
  font-family: Microsoft YaHei;
}

.option-view {
  width: 100%;
  height: 6vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid #3B3838;
}

.option-view:hover {
  background-color: #1F1F1F;
}

.option-text-view {
  width: 84%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.option-arrow-view {
  width: 10%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.option-text {
  color: #ffffff;
  font-size: 2.5vh;
  font-weight: 400;
  font-style: normal;
  font-family: Microsoft YaHei;
  line-height: 1;
}

.please-login-view {
  width: 50%;
  height: 8vh;
  background-color: red;
  border-radius: 4vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.please-login-text {
  color: #000000;
  font-size: 4vh;
  font-weight: 900;
  font-style: normal;
  font-family: Microsoft YaHei;
}

